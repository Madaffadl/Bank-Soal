<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Matematika_1"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/linearLayout31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/soalm1"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:text="Untuk mengerjakan 1 unit rumah dibutuhkan waktu 36 hari dengan 12 tenaga kerja. Berapa waktu akan dihabiskan bila menggunakan 24 orang tenaga kerja ??"
            android:textColor="@color/black"
            android:textStyle="bold" />
    </LinearLayout>

    <RadioGroup
        android:id="@+id/radioGroup2"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout31">

        <RadioButton
            android:id="@+id/m1b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="18 Hari"
            android:textColor="#FFEB3B" />

        <RadioButton
            android:id="@+id/m1d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17 Hari" />

        <RadioButton
            android:id="@+id/m1c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="16 Hari" />

        <RadioButton
            android:id="@+id/m1a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E60F0F"
            android:text="14 Hari" />
    </RadioGroup>

    <LinearLayout
        android:id="@+id/linearLayout34"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="46dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup2">

        <TextView
            android:id="@+id/soalm2"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            android:text="Sebuah pesawat terbang berangkat dari kota Kupang menuju kota Jakarta pukul 7 pagi dan perjalanan ke Jakarta selama 4 jam. Transit di Denpasar selama 30 menit. Pada pukul berapa pesawat tersebut tiba di Jakarta ??"
            android:textColor="#000000"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#000000"
        android:onClick="lembarm1"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup7"
        app:layout_constraintVertical_bias="1.0" />

    <RadioGroup
        android:id="@+id/radioGroup7"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.06"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout34">

        <RadioButton
            android:id="@+id/m2b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.00" />

        <RadioButton
            android:id="@+id/m2d"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.30" />

        <RadioButton
            android:id="@+id/m2a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10.45" />

        <RadioButton
            android:id="@+id/m2e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11.45"
            android:textColor="#FFEB3B" />
    </RadioGroup>

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/black"
        android:onClick="lembarm1back"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup7"
        app:layout_constraintVertical_bias="1.0" />

</androidx.constraintlayout.widget.ConstraintLayout>